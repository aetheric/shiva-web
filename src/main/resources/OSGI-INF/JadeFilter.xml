<?xml version="1.0" encoding="UTF-8"?>
<components xmlns:scr="http://www.osgi.org/xmlns/scr/v1.0.0">
	<scr:component name="nz.co.aetheric.shiva.web.jade.JadeFilter">

		<implementation class="nz.co.aetheric.shiva.web.jade.JadeFilter"/>

		<service servicefactory="false">
			<provide interface="javax.servlet.Filter"/>
		</service>

		<property
				name="service.pid"
				value="nz.co.aetheric.shiva.web.jade.JadeFilter"/>

		<reference
				name="config"
				interface="de.neuland.jade4j.JadeConfiguration"
				cardinality="1..1"
				policy="static"
				bind="bindConfig"
				unbind="unbindConfig"/>

		<reference
				name="loader"
				interface="de.neuland.jade4j.template.TemplateLoader"
				cardinality="1..1"
				policy="static"
				bind="bindLoader"
				unbind="unbindLoader"/>

		<reference
				name="providers"
				interface="nz.co.aetheric.shiva.web.jade.JadeModelProvider"
				cardinality="0..n"
				policy="static"
				bind="addProvider"
				unbind="removeProvider"/>

	</scr:component>
</components>
