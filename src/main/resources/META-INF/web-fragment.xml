<web-fragment
		version="3.0"
		id="aetheric-shiva-web-jade"
		xmlns="http://java.sun.com/xml/ns/javaee"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="
			http://java.sun.com/xml/ns/javaee
			http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd
		">
	<name>AethericShivaWebJade</name>
	<display-name>web-jade</display-name>

	<filter>
		<filter-name>JadeTemplateFilter</filter-name>
		<filter-class>nz.co.aetheric.shiva.web.jade.JadeFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>JadeTemplateFilter</filter-name>
		<url-pattern>/pane/*</url-pattern>
	</filter-mapping>

</web-fragment>